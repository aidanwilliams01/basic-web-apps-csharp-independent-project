@{
  Layout = "_Layout";
}
@using VendorAndOrderTracker.Models;

<h3>Vendors</h3>

@if (@Model.Count == 0)
{
  <h5>No vendors have been added yet.</h5>
} 

@foreach (Vendor vendor in Model)
{
  <h5><a href='/vendors/@vendor.Id'>@vendor.Name</a></h5>
  <p>@vendor.Description</p>
}
<a href='/vendors/new'>Add a vendor</a>